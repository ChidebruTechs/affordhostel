{
  "name": "AffordHostel Backend",
  "description": "Django REST API for AffordHostel platform",
  "image": "heroku/python",
  "repository": "https://github.com/your-username/affordhostel-backend",
  "keywords": ["python", "django", "rest-api", "hostel", "booking"],
  "addons": [
    {
      "plan": "heroku-postgresql:mini"
    },
    {
      "plan": "heroku-redis:mini"
    }
  ],
  "env": {
    "SECRET_KEY": {
      "description": "Django secret key for cryptographic signing",
      "generator": "secret"
    },
    "DEBUG": {
      "description": "Enable debug mode",
      "value": "False"
    },
    "FRONTEND_URL": {
      "description": "Frontend application URL",
      "value": "https://your-frontend-app.herokuapp.com"
    },
    "EMAIL_HOST_USER": {
      "description": "SMTP email username"
    },
    "EMAIL_HOST_PASSWORD": {
      "description": "SMTP email password"
    },
    "MPESA_CONSUMER_KEY": {
      "description": "M-Pesa consumer key"
    },
    "MPESA_CONSUMER_SECRET": {
      "description": "M-Pesa consumer secret"
    },
    "MPESA_SHORTCODE": {
      "description": "M-Pesa shortcode"
    },
    "MPESA_PASSKEY": {
      "description": "M-Pesa passkey"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "scripts": {
    "postdeploy": "python manage.py migrate && python manage.py collectstatic --noinput"
  }
}